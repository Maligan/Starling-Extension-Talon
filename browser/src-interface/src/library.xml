<library>

	<template id="Interface">
		<node id="interface" width="100%" height="100%" layout="abs" class="dark">
			<node id="container" width="100%" height="100%" />
			<node id="bsod" width="100%" height="100%"><label width="100%" height="100%" autoScale="true" text="¯\_(ツ)_/¯" /></node>
			<node id="popups" width="100%" height="100%" layout="abs" halign="center" valign="center"/>
		</node>
	</template>

	<template id="ProfilePopup">
		<node class="popup" layout="flow" orientation="vertical"> 

			<label text="$dialog.profile.title" width="*" padding="8px" />

			<node orientation="vertical" gap="8px" padding="8px" width="*" backgroundColor="gray" backgroundAlpha="0.1">
				<node width="100%" gap="8px">
					<label text="$dialog.profile.size" width="*" height="*" halign="left" />
					<input id="_width" width="48" />
					<label text="x" height="*" margin="none -4px" />
					<input id="_height" width="48" />
				</node>

				<node width="100%"> 
					<label text="$dialog.profile.DPI" width="*" height="*" halign="left" />
					<input id="_dpi" width="48" />
				</node>

				<node width="100%"> 
					<label text="$dialog.profile.CSF" width="*" height="*" halign="left" />
					<input id="_csf" width="48" />
				</node>
			</node>

			<node ihalign="center" margin="none" gap="8px" padding="8px">
				<button id="_accept" label="$button.accept" class="action" />
				<button id="_cancel" label="$button.cancel" />
			</node>

		</node>
	</template>

	<template id="PreferencesPopup">
		<node class="popup" layout="flow" orientation="vertical"> 

			<label text="$dialog.preferences.title" width="*" padding="8px" />

			<node orientation="vertical" gap="8px" padding="8px" width="*" backgroundColor="gray" backgroundAlpha="0.1">
				<checkbox label="$dialog.preferences.showStats" />
				<checkbox label="$dialog.preferences.alwaysOnTop" />
				<checkbox label="$dialog.preferences.checkForUpdate" />
				<checkbox label="$dialog.preferences.lockWindowSize" />
				<checkbox label="$dialog.preferences.openLastDocument" />
			</node>

			<node ihalign="center" margin="none" gap="8px" padding="8px">
				<button id="_accept" label="$button.accept" class="action" />
				<button id="_cancel" label="$button.cancel" />
			</node>

		</node>
	</template>

	<template id="GoToPopup">
		<node class="popup" id="goto" orientation="vertical"> 
			<input width="300px" margin="4px"/>
			<label />
			<label />
			<label />
			<label />
			<label />
			<label />
		</node>
	</template>

	<template id="Input" type="input">
		<label type="input" />
	</template>

	<template id="Button" type="button">
		<node type="button" label="Button">
			<label text="@label" width="80px" height="32px" />
		</node>
	</template>

	<template id="Checkbox" type="checkbox">
		<node type="checkbox" label="Checkbox">
			<image id="flag" />
			<label text="@label" halign="left" />
		</node>
	</template>

</library>
