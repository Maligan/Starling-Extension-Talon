<library>

	<template id="Interface">
		<node id="interface" width="100%" height="100%" layout="abs" class="dark">
			<node id="container" width="100%" height="100%" />
			<node id="popups" width="100%" height="100%" layout="abs" halign="center" valign="center"/>
			<node id="bsod" width="100%" height="100%"><label width="100%" height="100%" autoScale="true" text="¯\_(ツ)_/¯" /></node>
		</node>
	</template>

	<template id="UpdatePopup">
		<popup>
			<rewrite mode="content" ref="button" />
		</popup>
	</template>

	<template id="PopupBase" type="popup">
		<node type="popup" layout="flow" orientation="vertical" gap="8px"> 

			<label text="$dialog.profile.title" />

			<node width="*" gap="8px">
				<label text="$dialog.profile.size" width="*" height="*" halign="left" />
				<node class="input" width="48" />
				<node class="input" width="48" />
			</node>

			<node width="*"> 
				<label text="$dialog.profile.DPI" width="*" height="*" halign="left" />
				<node class="input" width="48" />
			</node>

			<node width="*"> 
				<label text="$dialog.profile.CSF" width="*" height="*" halign="left" />
				<node class="input" width="48" />
			</node>

			<node ihalign="center" margin="none" gap="8px">
				<button label="$button.apply" class="action" />
				<button label="$button.close" />
			</node>

		</node>
	</template>

	<template id="Button" type="button">
		<node type="button" label="label">
			<label text="@label" width="80px" height="32px" />
		</node>
	</template>

</library>
