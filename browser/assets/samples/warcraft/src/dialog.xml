<?xml version="1.0"?>
<library>

	<template id="dialog">
		<node orientation="vertical" header="Pangram explorer"> 

			<!-- Header -->
			<node id="header"><label text="@header" height="100%" marginTop="2px" /></node>

			<!-- Content -->
			<node id="content" backgroundColor="none" gap="8px">
				<image src="$('dialog-alert-icon')" width="48px" />
				<label halign="left" text="The quick brown fox jumps over the lazy dog. &#13;Jackdaws love my big sphinx of quartz.&#13;The five boxing wizards jump quickly." />
			</node>

			<!-- Bottom button block -->
			<node backgroundColor="none" ihalign="right" marginTop="8px">
				<button label="Accept" />
				<button label="Cancel" class="disabled" />
			</node>

		</node>
	</template>

	<template id="button">
		<node label="Label"><label text="@label" height="100%" marginTop="-0px" /></node>
	</template>

</library>
