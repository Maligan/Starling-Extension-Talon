<?xml version="1.0"?>
<library>

	<template id="dialogOverride">
		<dialog type="dialog">
			<rewrite mode="content" ref="buttons">
				<node width="32px" height="32px" backgroundColor="red" />
			</rewrite>
		</dialog>
	</template>

	<template id="ButtonBase">

		<node type="button" label="Button" amount="0">
			<label text="@label" />
			<image src="@icon" />
			<label text="@amount" />
		</node>

	</template>

	<template id="dialog">
		<node orientation="vertical" header="Available Pangramms"> 

			<!-- Header -->
			<node id="header"><label text="@header" height="100%" marginTop="2px" /></node>

			<!-- Content -->
			<node id="content" backgroundColor="none" gap="16px">
				<image class="warning" />
				<label halign="left" text="- The quick brown fox jumps over the lazy dog. &#13;- Jackdaws love my big sphinx of quartz.&#13;- The five boxing wizards jump quickly." />
			</node>

			<!-- Bottom button block -->
			<node id="buttons" ihalign="center" marginTop="4px" gap="8px">
				<button label="Accept" />
				<button label="Cancel" class="disabled" />
			</node>

		</node>
	</template>

	<template id="button">
		<node label="Label">
			<label id="button_label" text="@label" height="100%" />
		</node>
	</template>

</library>
