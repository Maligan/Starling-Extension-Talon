<library>

	<template id="Interface">
		<node id="interface" width="100%" height="100%" layout="abs" class="dark">
			<node id="container" width="100%" height="100%" />
			<node id="bsod" width="100%" height="100%"><label width="100%" height="100%" autoScale="true" text="¯\_(ツ)_/¯" /></node>
			<node id="popups" width="100%" height="100%" layout="flow" halign="center" valign="center"/>
			<image src="$error" width="48px" height="48px" anchor="0px 100% none none" margin="10px" />
			<node id="drag" width="100%" height="100%" />
		</node>
	</template>

	<template id="ProfilePopup">
		<node class="popup" layout="flow" orientation="vertical"> 

			<label text="$dialog.profile.title" padding="8px" /> <!-- width="*" -->

			<node orientation="vertical" gap="8px" padding="8px" width="*" fill="gray" fillAlpha="0.1">
				<node width="100%" gap="8px">
					<label text="$dialog.profile.size" width="*" height="*" halign="left" valign="center" />
					<input id="width" width="48" />
					<label text="x" ivalign="center" margin="none -6px" />
					<input id="height" width="48" />
				</node>

				<node width="100%"> 
					<label text="$dialog.profile.DPI" halign="left" valign="center" width="*" height="*" />
					<input id="dpi" width="48" />
				</node>

				<node width="100%"> 
					<label text="$dialog.profile.CSF" halign="left" valign="center" width="*" height="*" />
					<input id="csf" width="48" />
				</node>
			</node>

			<node ihalign="center" margin="none" gap="8px" padding="8px" width="150px">
				<button id="accept" label="$button.accept" width="*" class="action" />
				<button id="cancel" label="$button.cancel" width="*" />
			</node>

		</node>
	</template>

	<template id="BoxModel">
		<node fill="gray" layout="abs" width="100" height="100">
			<node width="32" height="32" position="100" />
		</node>
	</template>

	<template id="UpdatePopup">
		<node class="popup" orientation="vertical" width="300px">

			<label text="Check for Updates" padding="8px" />

			<node id="100" fill="gray" fillAlpha="0.1" width="100%" orientation="horizontal" padding="8px">
				<label id="info" text="$patch_notes" width="*" />
				<image id="spinner" pivot="50%" source="$spinner_16"/>
			</node>

			<node ihalign="center" margin="none" gap="8px" padding="8px" width="100%" halign="right">
				<button id="update" label="Update" class="action" />
				<button id="cancel" label="Cancel" />
			</node>

		</node>
	</template>

