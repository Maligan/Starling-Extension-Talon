	<template id="GoToPopup">
		<node class="popup" id="goto" orientation="vertical"> 
			<input width="300px" margin="4px"/>
			<label />
			<label />
			<label />
			<label />
			<label />
			<label />
		</node>
	</template>


	<template id="Input" type="input">
		<label type="input" />
	</template>

	<template id="Button" type="button">
		<label type="button" text="@label" />
	</template>

	<template id="Checkbox" type="checkbox">
		<node type="checkbox" label="Checkbox">
			<image id="flag" />
			<label text="@label" halign="left" />
		</node>
