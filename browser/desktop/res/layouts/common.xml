	<def ref="GoToPopup">
		<node class="popup" id="goto" layout="flow" orientation="vertical"> 
			<input width="300px" margin="4px"/>
			<label />
			<label />
			<label />
			<label />
			<label />
			<label />
		</node>
	</def>

	<def ref="Message" tag="message">
		<label type="message" />
	</def>

	<def ref="Input" tag="input">
		<label type="input" />
	</def>

	<def ref="Button" tag="button">
		<label type="button" text="@label" />
	</def>

	<def ref="Checkbox" tag="checkbox">
		<node type="checkbox" label="Checkbox" layout="flow">
			<image source="@image" />
			<label text="@label" halign="left" paddingTop="2" />
		</node>
	</def>

</lib>
