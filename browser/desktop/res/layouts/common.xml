<lib>

	<def ref="Interface">
		<node id="interface" width="100%" height="100%" layout="anchor" class="dark">
			<node id="container" width="100%" height="100%" />
			<node id="messages" top="0px" width="100%" layout="flow" orientation="vertical" gap="1px" />
			<node id="popups" width="100%" height="100%" layout="flow" halign="center" valign="center"/>
			<node id="drag" width="100%" height="100%" />
		</node>
	</def>

	<def ref="ProfilePopup">
		<node class="popup" layout="flow" orientation="vertical"> 

			<label text="$dialog.profile.title" padding="8px" /> <!-- width="*" -->

			<node layout="flow" orientation="vertical" gap="8px" padding="8px" width="*" fill="#4e5051">
				<node layout="flow" width="100%" gap="8px">
					<label text="$dialog.profile.size" width="*" height="*" halign="left" valign="center" />
					<input id="width" width="48" />
					<label text="x" ivalign="center" margin="none -6px" />
					<input id="height" width="48" />
				</node>

				<node layout="flow" width="100%"> 
					<label text="$dialog.profile.DPI" halign="left" valign="center" width="*" height="*" />
					<input id="dpi" width="48" />
				</node>

				<node layout="flow" width="100%"> 
					<label text="$dialog.profile.CSF" halign="left" valign="center" width="*" height="*" />
					<input id="csf" width="48" />
				</node>
			</node>

			<node layout="flow" ihalign="center" margin="none" gap="8px" padding="8px" width="150px">
				<button id="accept" label="$button.accept" width="*" class="action" />
				<button id="cancel" label="$button.cancel" width="*" />
			</node>

		</node>
	</def>

	<def ref="UpdatePopup">
		<node class="popup" layout="flow" orientation="vertical" width="330px">

			<label text="$dialog.updater.title" margin="8px" />

			<node layout="flow" fill="#4e5051" width="100%" orientation="horizontal" padding="8px" wrap="true">
				<label id="info" ivalign="center" text="UPDATE_STATUS" width="*" height="16px" />
				<node layout="anchor" width="20px" height="20px" >
					<image id="details" pivot="50%" source="$drop_down" cursor="button" />
					<image id="spinner" pivot="50%" source="$spinner_small" />
				</node>
			</node>

			<label id="detailsInfo" text="UPDATE_INFO" width="266px" padding="8px" marginTop="2px" fontColor="#888888" />

			<node layout="flow" ihalign="center" margin="none" gap="8px" padding="8px" width="100%" halign="right">
				<button id="update" label="Update" class="action" />
				<button id="cancel" label="Cancel" />
			</node>

		</node>
	</def>

